{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["schema_version", "appId", "name", "platforms"],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "appId": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9-]*(\\.[a-z][a-z0-9-]*)+$",
      "description": "Reverse-DNS format unique identifier"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "platforms": {
      "type": "object",
      "description": "Automation configuration for each platform",
      "properties": {
        "macos": {
          "type": "object",
          "properties": {
            "automation": {
              "type": "string",
              "enum": ["applescript", "jxa"]
            },
            "tools": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "description", "parameters", "script"],
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "parameters": {
                    "type": "object",
                    "description": "JSON Schema for tool parameters"
                  },
                  "script": { "type": "string" },
                  "output_parser": { "type": "string" },
                  "timeout": { "type": "integer" }
                }
              }
            }
          }
        },
        "windows": {
          "type": "object",
          "properties": {
            "automation": { "type": "string", "enum": ["com"] },
            "progid": { "type": "string" },
            "tools": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "description", "parameters", "script"],
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "parameters": { "type": "object", "description": "JSON Schema for tool parameters" },
                  "script": { "type": "array" },
                  "output_parser": { "type": "string" },
                  "timeout": { "type": "integer" }
                }
              }
            }
          }
        },
        "linux": {
          "type": "object",
          "properties": {
            "automation": { "type": "string", "enum": ["dbus"] },
            "service": { "type": "string" },
            "object": { "type": "string" },
            "interface": { "type": "string" },
            "tools": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "description", "parameters", "method"],
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "parameters": {
                    "type": "object",
                    "description": "JSON Schema for tool parameters"
                  },
                  "method": { "type": "string" },
                  "output_parser": { "type": "string" },
                  "timeout": { "type": "integer" }
                }
              }
            }
          }
        },
        "web": {
          "type": "object",
          "description": "Web App via REST API",
          "properties": {
            "automation": { "type": "string", "enum": ["restapi"] },
            "base_url": { "type": "string", "format": "uri", "description": "Base URL for all API calls" },
            "auth": {
              "type": "object",
              "description": "Authentication configuration",
              "required": ["type"],
              "properties": {
                "type": { "type": "string", "enum": ["oauth2", "api_key", "bearer"] },
                "auth_url": { "type": "string", "format": "uri", "description": "OAuth authorization endpoint" },
                "token_url": { "type": "string", "format": "uri", "description": "OAuth token endpoint" },
                "scopes": { "type": "array", "items": { "type": "string" }, "description": "Required OAuth scopes" },
                "token_placement": { "type": "string", "enum": ["header", "query"], "description": "Where to place the token" },
                "token_prefix": { "type": "string", "description": "Token prefix in header (e.g., Bearer)" },
                "env_var": { "type": "string", "description": "Environment variable for API key or bearer token" },
                "key_name": { "type": "string", "description": "Header or query param name for API key" },
                "key_placement": { "type": "string", "enum": ["header", "query"], "description": "Where to place API key" }
              }
            },
            "default_headers": { "type": "object", "description": "Headers sent with every request" },
            "tools": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "description", "parameters", "endpoint", "method"],
                "properties": {
                  "name": { "type": "string" },
                  "description": { "type": "string" },
                  "parameters": {
                    "type": "object",
                    "description": "JSON Schema for tool parameters"
                  },
                  "endpoint": { "type": "string", "description": "API endpoint path" },
                  "method": { "type": "string", "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"] },
                  "body": { "type": "object", "description": "Request body template" },
                  "query_params": { "type": "object", "description": "URL query parameters template" },
                  "headers": { "type": "object", "description": "Additional headers for this tool" },
                  "output_parser": { "type": "string", "enum": ["json", "text"] },
                  "timeout": { "type": "integer" }
                }
              }
            }
          }
        }
      }
    }
  }
}
